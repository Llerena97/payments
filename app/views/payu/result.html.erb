<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= link_to "Volver a los pagos", root_path, class: "btn btn-primary" %>
      <% unless @error %>
        <table class="table table-bordered mt-3">
          <tr>
            <th>Referencia</th>
            <td><%= @charge.uid %></td>
          </tr>
          <tr>
            <th>Estado</th>
            <td><%= params['lapTransactionState'] %></td>
          </tr>
          <tr>
            <th>Fecha</th>
            <td><%= params['proccessingDate'] %></td>
          </tr>
          <tr>
            <th>Descripcion</th>
            <td><%= params['descripcion'] %></td>
          </tr>
          <tr>
            <th>Valor</th>
            <td><%= @charge.amount %></td>
          </tr>
          <tr>
            <th>Respuesta</th>
            <td><%= params['lapResponseCode'] %></td>
          </tr>
          <tr>
            <th>Metodo de Pago</th>
            <td><%= params['lapPaymentMethodType'] %></td>
          </tr>
          <tr>
            <th>Mensaje</th>
            <td><%= params['message'] %></td>
          </tr>
        </table>
      <% else %>
        <div class="alert alert-danger"><%= @error %></div>
      <% end %>
    </div>
  </div>
</div>